%INT "int"
%VOID "void"

%RETURN "return"

%EQ     "="
%LPAREN "("
%RPAREN ")"
%LCURL  "{"
%RCURL  "}"
%SEMI   ";"
%COMMA  ","

// TODO: Protect against partial match of identifiers.
%ID        [a-zA-Z_][a-zA-Z0-9_]*
%INT_CONST [0-9]+


func -> type ID LPAREN optarglist RPAREN LCURL stmts RCURL

// TODO: add more types
type -> INT
type -> VOID

stmts -> stmt stmts
stmts ->

optarglist -> arglist |
arglist -> arg COMMA arglist | arg
arg -> type ID

// TODO: Add more statements.
stmt -> SEMI | RETURN expr SEMI | type ID SEMI | type ID EQ expr SEMI | ID EQ expr SEMI

// TODO: Add more exprs.
expr -> INT_CONST

!func